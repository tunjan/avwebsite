// backend/tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist", // Crucial: This is where the compiled JS will go
    "rootDir": "src",
    "strict": true
  },
  "include": [
    "src/**/*" // Only compile files in the `src` directory
  ],
  "exclude": [
    "node_modules"
  ]
}