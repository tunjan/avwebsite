{
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "build": "npm run build"
        },
        {
            "src": "backend/src/server.ts",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/src/server.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ]
}